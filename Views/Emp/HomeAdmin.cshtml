@model IEnumerable<BloodDoner.Models.Admin>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomeAdmin</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #c{
            margin-left:30%;
            margin-right:30%;
        }
        #navbarr{
            background-color:black;
            color:white;
            height:50px;
            width:100%;
            margin-top:0px;
        }
    </style>
</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Logout", "LogoutEmp")</li>
                    </ul>
                    </div>
            </div>
        </div>

                    <div id="c">
                        <h2 style="text-align:center">List of Employees</h2>
                        <p style="padding:5%">
                            @Html.ActionLink("Create New", "CreateEmp")
                        </p>
                        <table class="table">
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>


                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>


                                    <td>

                                        <!--//Html.ActionLink("Delete", "EmpDelete", new { s = item.Email })-->
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
</body>
</html>
